@model LWMS.Models.users

@{
    ViewBag.Title = "Create";
}

<h4>店长管理</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>users</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table class="table">
            <tr><td> 账号：
                </td>
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.login_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.login_name, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    姓名：
                </td>
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    身份证号：
                </td>
                <td>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.real_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.real_name, "", new { @class = "text-danger" })
                    </div>
                </td>
            </tr> 
        </table> 
 
 
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
                <input type="button" onclick="javascript: history.go(-1);" value="取消" name="cancel" class="btn btn-default" />
            </div>
        </div>
    </div>
}

