@model LWMS.Models.food_categories


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>菜品分类管理</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           
    
            <div class="form-group">
                名称：
                <div class="col-md-10">
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                排序号：
                <div class="col-md-10">
                    @Html.TextBox("sequence", ViewData["sequenccount"])


                    @*@Html.TextBoxFor(model => model.sequence, new { @value = ViewData["sequenccount"].ToString() })*@
               @ViewData["sequenccount"] 
                    @Html.ValidationMessageFor(model => model.sequence, "", new { @class = "text-danger" })
                </div>
            </div>  
                
            <div class="form-group">
                备注：
                <div class="col-md-10">
                    @Html.EditorFor(model => model.remark, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.remark, "", new { @class = "text-danger" })
                </div>
            </div>  
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="保存" class="btn btn-default" />
                    <input type="button" onclick="javascript: history.go(-1);"  value="取消" name="action1" class="btn btn-default" />
                </div>
            </div>
              
        </div>
    }
    
    <div>
        @*@Html.ActionLink("Back to List", "Index")*@
    </div>
</body>
</html>
