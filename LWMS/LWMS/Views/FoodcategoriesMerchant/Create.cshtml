@model LWMS.Models.food_categories


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>菜品分类管理</h4>
            <hr />
            <table class="table">
                <tr>
                    <td colspan="2">     @Html.ValidationSummary(true, "", new { @class = "text-danger" })         </td>
                </tr>
                <tr>
                    <td>名称：</td>
                    <td>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span tyle="float:left;"> 排序号：</span>
                    </td>
                    <td>
                        <div class="col-md-10">
                            @Html.TextBox("sequence", ViewData["sequenccount"])
                            @Html.ValidationMessageFor(model => model.sequence, "", new { @class = "text-danger" })
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <span tyle="float:left;"> 备注：</span>
                    </td>
                    <td>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.remark, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.remark, "", new { @class = "text-danger" })
                        </div>
                    </td>
                </tr>
            </table>
          
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="保存" class="btn btn-default" />
                    <input type="button" onclick="javascript: history.go(-1);"  value="取消" name="action1" class="btn btn-default" />
                </div>
            </div>
              
        </div>
    }
    
    <div>
        @*@Html.ActionLink("Back to List", "Index")*@
    </div>
</body>
</html>
